{
  "compileOnSave": true,
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ES2018",
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "inlineSourceMap":true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "stripInternal": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "pretty": true,
    "declaration": true,
    "jsx": "preserve",
    "outDir": "dist",
    "typeRoots": [ "./typings", "./node_modules/@types"],
    "paths": {
      "~/*": ["./*"],
      "@/*": ["./web/*"],
      "~src/*": ["./src/*"],
      "_build/*": ["./build/*"]
    }
  },
  "include": [
    "src",
    "web"
  ]
}


{
  "name": "nestjs-vue3-ssr",
  "version": "1.0.0",
  "private": true,
  "dependencies": {
    "@nestjs/common": "^10.2.7",
    "@nestjs/core": "^10.2.7",
    "@nestjs/platform-express": "^10.2.7",
    "@vue/server-renderer": "^3.0.7",
    "pinia": "^2.0.13",
    "pm2": "^4.5.4",
    "reflect-metadata": "^0.1.13",
    "ssr-common-utils": "^6.0.0",
    "ssr-core": "^6.0.0",
    "ssr-hoc-vue3": "^6.0.0",
    "swiper": "6.7.5",
    "vue": "^3.0.0",
    "vue-router": "^4.2.4",
    "vuex": "^4.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@nestjs/cli": "^10.1.18",
    "ssr": "^6.0.0",
    "ssr-plugin-nestjs": "^6.0.0",
    "ssr-plugin-vue3": "^6.0.0",
    "ssr-types": "^6.0.0",
    "typescript": "^5.0.0",
    "webpack": "^4.0.0"
  },
  "engines": {
    "node": ">=16.20.0"
  },
  "scripts": {
    "prod": "ssr build && pm2 start pm2.config.js",
    "prod:vite": "ssr build --vite && pm2 start pm2.config.js",
    "stop": "pm2 stop pm2.config.js",
    "start": "ssr start",
    "start:vite": "ssr start --vite",
    "build": "ssr build",
    "build:o": "ssr build --optimize",
    "build:vite": "ssr build --vite",
    "deploy": "ssr build && ssr deploy",
    "lint": "biome format --diagnostic-level error",
    "lint:fix": "biome format --diagnostic-level error --write"
  }

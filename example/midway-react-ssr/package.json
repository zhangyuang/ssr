    "ssr": "^6.0.0",
    "ssr-plugin-midway": "^6.0.0",
    "ssr-plugin-react": "^6.0.0",
    "ssr-types-react": "^6.0.0",
    "typescript": "^4.0.0"
  },
  "scripts": {
    "prod": "ssr build && pm2 start pm2.config.js",
    "prod:vite": "ssr build --vite && pm2 start pm2.config.js",
